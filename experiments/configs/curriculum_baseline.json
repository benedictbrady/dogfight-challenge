{
  "script": "train",
  "model": {
    "hidden": 256,
    "n_blocks": 0
  },
  "training": {
    "n_envs": 128,
    "n_steps": 2048,
    "num_updates": 750,
    "lr": 3e-4,
    "gamma": 0.999,
    "gae_lambda": 0.95,
    "clip_eps": 0.2,
    "vf_coef": 0.5,
    "ent_coef": 0.0,
    "action_repeat": 10,
    "n_epochs": 4,
    "minibatch_size": 2048,
    "max_grad_norm": 0.5,
    "anneal_lr": true,
    "clip_vloss": true,
    "randomize": true,
    "save_every": 50
  },
  "curriculum": {
    "stages": [
      {"until_update": 50, "pool": ["do_nothing"]},
      {"until_update": 150, "pool": ["do_nothing", "dogfighter"]},
      {"until_update": 300, "pool": ["dogfighter", "chaser"]},
      {"until_update": 450, "pool": ["chaser", "ace"]},
      {"after_update": 450, "pool": ["ace", "brawler"]}
    ]
  },
  "modal": {
    "gpu": null,
    "cpu": 16,
    "memory": 8192,
    "timeout": 14400
  }
}
